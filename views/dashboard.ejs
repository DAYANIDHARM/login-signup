<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Dashboard</title>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }

  /* GLOBAL FONT SIZE FIX */
  html {
    font-size: 18px;
  }

  /* Increase readability on smaller screens */
  @media (max-width: 900px) { html { font-size: 19px; } }
  @media (max-width: 700px) { html { font-size: 20px; } }
  @media (max-width: 550px) { html { font-size: 21px; } }
  @media (max-width: 420px) { html { font-size: 22px; } }

  body {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #6e00ff, #bb00ff);
    padding: 20px;
    color: white;
    overflow-x: hidden;
  }

  /* DASHBOARD BOX FIXED */
  .dashboard-box {
    width: 450px;
    max-width: 95%;
    padding: 35px;
    background: rgba(255,255,255,0.15);
    box-shadow: 0 0 30px rgba(255,255,255,0.3);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 10;
    text-align: center;
  }

  .dashboard-box h2 {
    margin-bottom: 25px;
    font-size: 1.8rem;
  }

  .info-box {
    margin: 14px 0;
    padding: 14px;
    background: rgba(255,255,255,0.25);
    border-radius: 10px;
    font-size: 1.15rem;
    display: flex;
    justify-content: space-between;
    word-wrap: break-word;
  }

  @media (max-width: 650px) {
    .info-box {
      flex-direction: column;
      text-align: center;
      gap: 4px;
    }
  }

  .logout-btn {
    width: 100%;
    padding: 12px;
    margin-top: 25px;
    background: linear-gradient(45deg, #ff0055, #ff00b3);
    border: none;
    border-radius: 10px;
    font-size: 1.1rem;
    color: white;
    cursor: pointer;
    transition: 0.3s;
  }

  .logout-btn:hover {
    transform: scale(1.05);
  }

  /* FLOATING USER BUBBLES */
  .username-bubbles {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    pointer-events: none;
    z-index: 5;
  }

  .user-bubble {
    position: absolute;
    border-radius: 50%;
    background: rgba(255,255,255,0.22);
    backdrop-filter: blur(4px);
    color: white;
    font-weight: bold;
    pointer-events: auto;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;

    /* FIX: readable always */
    font-size: 0.75rem;
  }

  /* Size adjustments */
  @media (max-width: 650px) {
    .user-bubble { width: 60px !important; height: 60px !important; font-size: 0.7rem !important; }
  }

  @media (max-width: 450px) {
    .user-bubble { width: 52px !important; height: 52px !important; font-size: 0.65rem !important; }
  }

  /* ===== MODAL STYLING MATCHING DASHBOARD ===== */
.modal {
  display: none;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.65);
  backdrop-filter: blur(4px);
  justify-content: center;
  align-items: center;
  z-index: 50;
  animation: fadeIn 0.25s ease;
  padding: 15px;
}

.modal-content {
  background: rgba(255,255,255,0.12);
  padding: 30px 20px;
  border-radius: 20px;
  backdrop-filter: blur(15px);
  color: white;
  text-align: center;
  width: 100%;
  max-width: 360px;
  box-shadow: 0 0 25px rgba(255,255,255,0.2);
  border: 1px solid rgba(255,255,255,0.2);
  animation: popIn 0.25s ease;
}

.modal-content h3 {
  font-size: 1.5rem;
  margin-bottom: 12px;
  color: #ffddff;
  word-wrap: break-word;
}

.modal-user {
  font-weight: 600;
  margin-bottom: 15px;
  color: #ff99ff;
  word-wrap: break-word;
  font-size: 1rem;
}

.modal input {
  padding: 12px 15px;
  width: 90%;
  border-radius: 10px;
  margin-bottom: 20px;
  border: none;
  outline: none;
  background: rgba(255,255,255,0.2);
  color: white;
  font-size: 1rem;
  transition: 0.3s;
}

.modal input:focus {
  background: rgba(255,255,255,0.35);
  box-shadow: 0 0 10px rgba(255,255,255,0.3);
}

.modal-buttons {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12px;
}

.modal-btn {
  padding: 10px 18px;
  border-radius: 10px;
  border: none;
  font-size: 0.95rem;
  cursor: pointer;
  font-weight: 600;
  transition: 0.3s;
  flex: 1 1 40%;
  min-width: 100px;
}

.submit-btn {
  background: linear-gradient(45deg, #ff00bb, #ff77ff);
  color: white;
}

.submit-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 0 12px rgba(255,119,255,0.6);
}

.cancel-btn {
  background: rgba(255,255,255,0.2);
  color: #fff;
}

.cancel-btn:hover {
  background: rgba(255,255,255,0.35);
  transform: scale(1.05);
}

@keyframes fadeIn {
  from {opacity: 0;}
  to {opacity: 1;}
}

@keyframes popIn {
  0% { transform: scale(0.8); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

/* ===== RESPONSIVE TEXT & BUTTONS ===== */
@media (max-width: 500px) {
  .modal-content {
    padding: 25px 15px;
  }
  .modal-content h3 {
    font-size: 1.3rem;
  }
  .modal-user {
    font-size: 0.95rem;
  }
  .modal input {
    font-size: 0.95rem;
    padding: 10px 12px;
  }
  .modal-btn {
    font-size: 0.9rem;
    padding: 9px 14px;
  }
}

@media (max-width: 380px) {
  .modal input {
    width: 95%;
  }
  .modal-buttons {
    gap: 8px;
  }
  .modal-btn {
    flex: 1 1 45%;
    min-width: 80px;
  }
}

</style>
</head>

<body>

  <div class="dashboard-box">
    <h2>Welcome to Dashboard</h2>

    <div class="info-box">
      <span>Username</span>
      <span><%= user.username %></span>
    </div>

    <div class="info-box">
      <span>Email</span>
      <span><%= user.email %></span>
    </div>

    <div class="info-box">
      <span>Password</span>
      <span>********</span>
    </div>

    <form action="/logout">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>


<!-- Modal -->
<div id="passwordModal" class="modal">
  <div class="modal-content">
    <h3>Enter Password</h3>
    <p id="modalUsername" class="modal-user"></p>
    <input type="password" id="modalPassword" placeholder="Password" />
    <div class="modal-buttons">
      <button id="modalSubmit" class="modal-btn submit-btn">Submit</button>
      <button id="modalCancel" class="modal-btn cancel-btn">Cancel</button>
    </div>
  </div>
</div>



  <!-- Floating Bubbles -->
  <div class="username-bubbles">
    <% allUsers.forEach(u => { 
        if(u.username !== user.username){ %>
        <div class="user-bubble" data-username="<%= u.username %>"><%= u.username %></div>
    <% } }); %>
  </div>

<script>
/* === Floating Bubble Animations === */
const bubbleElements = document.querySelectorAll(".user-bubble");
const bubbleData = [];

bubbleElements.forEach(bubble => {
  const size = 55 + Math.random() * 50;
  bubble.style.width = size + "px";
  bubble.style.height = size + "px";

  const w = window.innerWidth;
  const h = window.innerHeight;

  bubbleData.push({
    el: bubble,
    x: Math.random() * w,
    y: Math.random() * h,
    size,
    vx: (Math.random() * 1.2 + 0.5) * (Math.random() < 0.5 ? -1 : 1),
    vy: (Math.random() * 1.2 + 0.5) * (Math.random() < 0.5 ? -1 : 1),
  });
});

function animate() {
  const w = window.innerWidth;
  const h = window.innerHeight;

  bubbleData.forEach(b => {
    b.x += b.vx;
    b.y += b.vy;

    if (b.x <= 0 || b.x + b.size >= w) b.vx *= -1;
    if (b.y <= 0 || b.y + b.size >= h) b.vy *= -1;

    b.el.style.transform = `translate(${b.x}px, ${b.y}px)`;
  });

  requestAnimationFrame(animate);
}
animate();
</script>

<script>
/* === Modal Switch User Logic === */
const bubbles = document.querySelectorAll(".user-bubble");
const modal = document.getElementById("passwordModal");
const modalUsername = document.getElementById("modalUsername");
const modalPassword = document.getElementById("modalPassword");
const submitBtn = document.getElementById("modalSubmit");
const cancelBtn = document.getElementById("modalCancel");

let currentUser = "";

bubbles.forEach(b => {
  b.addEventListener("click", () => {
    currentUser = b.dataset.username;
    modalUsername.textContent = currentUser;
    modal.style.display = "flex";
    modalPassword.value = "";
  });
});

cancelBtn.addEventListener("click", () => {
  modal.style.display = "none";
});

submitBtn.addEventListener("click", async () => {
  const pass = modalPassword.value;
  if (!pass) return alert("Enter password");

  const res = await fetch("/switchUser", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ username: currentUser, password: pass })
  });

  const data = await res.json();
  if (data.success) {
    window.location.href = "/dashboard";
  } else {
    alert("Wrong password!");
  }
});
</script>

</body>
</html>
