<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Dashboard</title>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }

  /* Improve readability everywhere */
  html {
    font-size: 18px;
  }

  /* Mobile = larger fonts */
  @media (max-width: 900px) { html { font-size: 19px; } }
  @media (max-width: 700px) { html { font-size: 20px; } }
  @media (max-width: 550px) { html { font-size: 21px; } }
  @media (max-width: 420px) { html { font-size: 22px; } }

  body {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;

    /* Clean background (bubbles removed) */
    background: linear-gradient(135deg, #6e00ff, #bb00ff);

    padding: 20px;
    color: white;
    overflow-x: hidden;
  }

  /* DASHBOARD CENTER BOX */
  .dashboard-box {
    width: 450px;
    max-width: 95%;
    padding: 45px; /* Bigger like login */
    background: rgba(255,255,255,0.18);
    box-shadow: 0 0 30px rgba(255,255,255,0.35);
    border-radius: 20px;
    backdrop-filter: blur(12px);
    text-align: center;
  }

  .dashboard-box h2 {
    margin-bottom: 30px;
    font-size: 2rem;
  }

  .info-box {
    margin: 18px 0;
    padding: 18px;
    background: rgba(255,255,255,0.28);
    border-radius: 12px;
    font-size: 1.3rem;   /* Bigger text */
    display: flex;
    justify-content: space-between;
    word-wrap: break-word;
  }

  @media (max-width: 650px) {
    .info-box {
      flex-direction: column;
      text-align: center;
      gap: 6px;
      font-size: 1.4rem; /* even bigger on phone */
    }
  }

  .logout-btn {
    width: 100%;
    padding: 15px;
    margin-top: 30px;
    background: linear-gradient(45deg, #ff0055, #ff00b3);
    border: none;
    border-radius: 12px;
    font-size: 1.3rem;
    color: white;
    cursor: pointer;
    transition: 0.3s;
  }

  .logout-btn:hover {
    transform: scale(1.07);
  }

  /* ===== MODAL (Switch user password) ===== */
  .modal {
    display: none;
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.65);
    backdrop-filter: blur(4px);
    justify-content: center;
    align-items: center;
    z-index: 50;
    padding: 15px;
  }

  .modal-content {
    background: rgba(255,255,255,0.16);
    padding: 35px;
    border-radius: 20px;
    backdrop-filter: blur(15px);
    color: white;
    text-align: center;
    width: 100%;
    max-width: 360px;
    box-shadow: 0 0 25px rgba(255,255,255,0.2);
    border: 1px solid rgba(255,255,255,0.2);
  }

  .modal-content h3 {
    font-size: 1.6rem;
    margin-bottom: 15px;
  }

  .modal-user {
    font-size: 1.1rem;
    margin-bottom: 15px;
  }

  .modal input {
    padding: 14px;
    width: 90%;
    border-radius: 10px;
    margin-bottom: 20px;
    border: none;
    outline: none;
    background: rgba(255,255,255,0.25);
    color: white;
    font-size: 1.1rem;
  }

  .modal-buttons {
    display: flex;
    justify-content: center;
    gap: 12px;
  }

  .modal-btn {
    padding: 12px 20px;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    min-width: 100px;
    font-size: 1rem;
    font-weight: 600;
  }

  .submit-btn {
    background: linear-gradient(45deg, #ff00bb, #ff77ff);
    color: white;
  }

  .cancel-btn {
    background: rgba(255,255,255,0.25);
    color: white;
  }
</style>
</head>

<body>

  <div class="dashboard-box">
    <h2>Welcome to Dashboard</h2>

    <div class="info-box">
      <span>Username</span>
      <span><%= user.username %></span>
    </div>

    <div class="info-box">
      <span>Email</span>
      <span><%= user.email %></span>
    </div>

    <div class="info-box">
      <span>Password</span>
      <span>********</span>
    </div>

    <form action="/logout">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>

<!-- Modal -->
<div id="passwordModal" class="modal">
  <div class="modal-content">
    <h3>Enter Password</h3>
    <p id="modalUsername" class="modal-user"></p>
    <input type="password" id="modalPassword" placeholder="Password" />
    <div class="modal-buttons">
      <button id="modalSubmit" class="modal-btn submit-btn">Submit</button>
      <button id="modalCancel" class="modal-btn cancel-btn">Cancel</button>
    </div>
  </div>
</div>

<script>
/* Switching user modal logic (bubbles removed, but backend still uses switchUser) */

/* You can keep this for switch user button if you add one. */

const modal = document.getElementById("passwordModal");
const modalUsername = document.getElementById("modalUsername");
const modalPassword = document.getElementById("modalPassword");
const submitBtn = document.getElementById("modalSubmit");
const cancelBtn = document.getElementById("modalCancel");

let currentUser = "";

cancelBtn.addEventListener("click", () => {
  modal.style.display = "none";
});

submitBtn.addEventListener("click", async () => {
  const pass = modalPassword.value;
  if (!pass) return alert("Enter password");

  const res = await fetch("/switchUser", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ username: currentUser, password: pass })
  });

  const data = await res.json();
  if (data.success) {
    window.location.href = "/dashboard";
  } else {
    alert("Wrong password!");
  }
});
</script>

</body>
</html>
