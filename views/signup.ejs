<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Futuristic Sign Up</title>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap");

  * { margin: 0; padding: 0; box-sizing: border-box; }
  html, body { height: 100%; }

  body {
    font-family: "Poppins", sans-serif;
    background: #050011;
    overflow-x: hidden;
    overflow-y: auto;
    min-height: 100vh;
    position: relative;
  }

  /* PAGE CENTERING LIKE LOGIN FORM */
  .page-wrap {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 32px;
    position: relative;
    z-index: 5;
  }

  /* ALWAYS-VISIBLE GRID FIX */
  .grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.04) 1px, transparent 1px);
    background-size: 40px 40px;
    animation: moveGrid 8s linear infinite;
    z-index: -3;
  }

  @keyframes moveGrid {
    from { transform: translateY(0); }
    to   { transform: translateY(40px); }
  }

  /* CURSOR GLOW */
  #cursorGlow {
    position: fixed;
    width: 260px;
    height: 260px;
    background: radial-gradient(circle, rgba(255,0,240,.4), transparent 70%);
    border-radius: 50%;
    filter: blur(90px);
    pointer-events: none;
    transform: translate(-50%, -50%);
    transition: 0.1s linear;
    z-index: -4;
  }

  /* SIGNUP CARD */
  .card {
    width: clamp(300px, 90%, 420px);
    padding: 36px 28px;
    background: rgba(255,255,255,0.06);
    backdrop-filter: blur(18px);
    border-radius: 16px;
    box-shadow: 0 8px 40px rgba(255,0,255,0.18),
                0 0 22px rgba(255,0,255,0.12) inset;
    animation: popUp 700ms cubic-bezier(.2,.9,.2,1);
  }

  @keyframes popUp {
    from { opacity: 0; transform: translateY(20px) scale(0.95); }
    to   { opacity: 1; transform: translateY(0) scale(1); }
  }

  h2 {
    text-align: center;
    color: #fff;
    font-size: 28px;
    margin-bottom: 20px;
    letter-spacing: 3px;
    text-shadow: 0 0 16px #ff00f7;
  }

  input {
    width: 100%;
    padding: 12px 14px;
    margin: 10px 0;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.06);
    background: rgba(255,255,255,0.08);
    color: #fff;
    font-size: 15px;
    outline: none;
    transition: 0.25s;
  }

  input:focus {
    border-color: #ff00f7;
    box-shadow: 0 0 14px rgba(255,0,255,0.2);
  }

  button {
    width: 100%;
    padding: 12px 14px;
    border: none;
    border-radius: 12px;
    font-size: 17px;
    background: linear-gradient(45deg,#ff00e6,#6900ff);
    color: #fff;
    cursor: pointer;
    box-shadow: 0 0 20px rgba(255,0,255,0.18);
    transition: .2s;
  }

  .login {
    text-align: center;
    margin-top: 18px;
    color: #fff;
  }

  .login a {
    color: cyan;
    font-weight: bold;
  }

  /* ERROR BOX LIKE LOGIN PAGE */
  .error-box {
    background: rgba(255, 50, 50, 0.25);
    color: #ffb3b3;
    padding: 10px 14px;
    border-radius: 10px;
    margin-bottom: 15px;
    text-align: center;
    border-left: 3px solid red;
    animation: fadeIn .3s ease forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-6px); }
    to   { opacity: 1; transform: translateY(0); }
  }

</style>
</head>

<body>

<div class="grid"></div>
<div id="cursorGlow"></div>

<div class="page-wrap">
  <div class="card" id="signupBox">
    <h2>SIGN UP</h2>

    <% if (error) { %>
<div id="errorBox" class="error-box"><%= error %></div>
<% } %>



    <form action="/signupUser" method="post">
      <input type="text" name="username" placeholder="Enter Username" required>
      <input type="email" name="email" placeholder="Enter Email" required>
      <input type="password" name="password" placeholder="Create Password" required>
      <button type="submit">Create Account</button>
    </form>

    <div class="login">
      <a href="/" id="loginBtn">Already have an account? Login</a>
    </div>
  </div>
</div>

<script>
  /* CURSOR GLOW */
  if (!("ontouchstart" in window)) {
    const glow = document.getElementById("cursorGlow");
    document.addEventListener("mousemove", (e) => {
      glow.style.left = e.pageX + "px";
      glow.style.top = e.pageY + "px";
    });
  }

  /* AUTO-HIDE ERROR LIKE LOGIN PAGE */
  const err = document.getElementById("errorBox");
  if (err) {
    setTimeout(() => {
      err.style.transition = "0.5s";
      err.style.opacity = "0";
      err.style.transform = "translateY(-10px)";
      setTimeout(() => err.remove(), 600);
    }, 2500); // display for 2.5 seconds
  }
</script>

</body>
</html>
